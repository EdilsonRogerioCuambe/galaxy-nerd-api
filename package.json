  "devDependencies": {
    "@fastify/swagger": "8.10.0",
    "@fastify/swagger-ui": "1.9.3",
    "@rocketseat/eslint-config": "2.1.0",
    "@types/bcryptjs": "2.4.3",
    "@types/node": "20.5.9",
    "@types/nodemailer": "6.4.10",
    "@types/supertest": "2.0.12",
    "@vitest/coverage-v8": "0.34.3",
    "@vitest/ui": "0.34.3",
    "eslint": "8.48.0",
    "npm-run-all": "4.1.5",
    "prisma": "5.2.0",
    "supertest": "6.3.3",
    "tsup": "7.2.0",
    "tsx": "3.12.8",
    "typescript": "5.2.2",
    "vite-tsconfig-paths": "4.2.0",
    "vitest": "0.33.0"
  },
